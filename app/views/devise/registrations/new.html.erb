<div class="container">
<hr>
<div class="card bg-light">
  <article class="card-body mx-auto" style="max-width: 400px;">
    <h4 class="card-title mt-3 text-center">Create Account</h4>
    <p>
      <button type="submit" class="btn btn-block btn-twitter"> <i class="fa fa-twitter"></i> Â  Login via Twitter</button>
      <a href="<%= user_facebook_omniauth_authorize_path %>" class="btn btn-block btn-facebook"><i class="fa fa-facebook-f"></i> Login via facebook </a>
    </p>
    <p class="divider-text">
          <span class="bg-light">OR</span>
    </p>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group input-group">
        <div class="input-group-prepend">
          <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
        </div>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control", :placeholder => "Email" %>
      </div>

      <div class="form-group input-group">
        <div class="input-group-prepend">
          <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
        </div>
        <%= f.password_field :password, autocomplete: "new-password", :class => "form-control", :placeholder => "Password (min 6 char)" %>
      </div>

      <div class="form-group input-group">
        <div class="input-group-prepend">
          <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
        </div>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => "form-control", :placeholder => "confirm password" %>
      </div>

      <div class="actions">
        <button type="submit" class="btn btn-primary btn-block"> Create Account  </button>
      </div>
      <p class="text-center">Have an account? <a href="<%= new_user_session_path %>">Log In</a> </p>
    <% end %>
  </article>
</div>

<%#= render "devise/shared/links" %>